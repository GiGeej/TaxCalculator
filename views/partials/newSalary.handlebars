<form>
        <div class="form-group">
            <label for="first_name">First Name</label>
            <input type="text" class="form-control" id="S_first_name" placeholder="First Name" required>
        </div>
        <div class="form-group">
            <label for="last_name">Last Name</label>
            <input type="text" class="form-control" id="S_last_name" placeholder="Last Name" required>
        </div>
        <div class="form-group">
            <label for="dob">Date of Birth</label>
            <input type="date" class="form-control" id="S_dob" required>
        </div>
        <div class="form-group">
            <label for="grossAnnual">Annual Pay before Tax</label>
            <input type="number" class="form-control" id="grossAnnual" placeholder="" required>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="S_has_hecs">
            <label class="form-check-label" for="has_hecs">HECS Debt</label>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Create</button>

    </form>