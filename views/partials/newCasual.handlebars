   <form class="casualForm">
        <div class="form-group">
            <label for="C_first_name">First Name</label>
            <input type="text" class="form-control" id="C_first_name" placeholder="First Name" required>
        </div>
        <div class="form-group">
            <label for="C_last_name">Last Name</label>
            <input type="text" class="form-control" id="C_last_name" placeholder="Last Name" required>
        </div>
        <div class="form-group">
            <label for="C_dob">Date of Birth</label>
            <input type="date" class="form-control" id="C_dob" required>
        </div>
        <div class="form-group">
            <label for="grossAnnual">Hours Worked Weekly</label>
            <input type="number" class="form-control" id="hoursWorked" placeholder="" required>
        </div>
        <div class="form-group">
            <label for="hourlyRate">Hourly Rate</label>
            <input type="number" step="0.01" class="form-control" id="hourlyRate" placeholder="" required>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="C_has_hecs">
            <label class="form-check-label" for="C_has_hecs">HECS Debt</label>
        </div>
        <button type="submit" id="newCasualSubmit" class="btn btn-primary" style="margin-top: 10px;">Create</button>

    </form>

<script src="./js/newTaxpayer.js"></script>
